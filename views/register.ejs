<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="form-container">
    <h1><i class="fas fa-user-plus"></i> Register</h1>
    <% if (messages.success_msg && messages.success_msg.length > 0) { %>
      <div class="message success"><i class="fas fa-check-circle"></i> <%= messages.success_msg %></div>
    <% } %>
    <% if (messages.error_msg && messages.error_msg.length > 0) { %>
      <div class="message error"><i class="fas fa-exclamation-circle"></i> <%= messages.error_msg %></div>
    <% } %>
    <form action="/users/register" method="POST">
      <div class="form-group">
        <label for="username"><i class="fas fa-user"></i> Username:</label>
        <input type="text" name="username" id="username" placeholder="Enter your username" required aria-required="true">
      </div>
      <div class="form-group">
        <label for="email"><i class="fas fa-envelope"></i> Email:</label>
        <input type="email" name="email" id="email" placeholder="Enter your email" required aria-required="true">
      </div>
      <div class="form-group">
        <label for="password"><i class="fas fa-lock"></i> Password:</label>
        <input type="password" name="password" id="password" placeholder="Enter your password" required aria-required="true">
      </div>
      <button type="submit" class="submit-btn"><i class="fas fa-sign-in-alt"></i> Register</button>
    </form>
    <a href="/users/login" class="login-link"><i class="fas fa-arrow-left"></i> Already have an account? Log in</a>
  </div>
</body>
</html>